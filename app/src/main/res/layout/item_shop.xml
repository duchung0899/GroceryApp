<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="120dp"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/img_shop"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:c_border="true"
        android:src="@drawable/ic_person_gray"
        app:c_border_color="@color/colorGray01"
        app:c_border_width="1dp"/>

    <ImageView
        android:id="@+id/img_status"
        android:layout_width="@dimen/image_status"
        android:layout_height="@dimen/image_status"
        android:background="@drawable/bg_circle02"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="30dp"/>

    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_shop"
        android:gravity="center"
        android:textSize="12dp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:text="@string/shopname"
        android:textColor="@color/colorPrimary"/>

</RelativeLayout>