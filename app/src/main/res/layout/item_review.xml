<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_item_review"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_cart_gray"/>

    <TextView
        android:id="@+id/tv_item_review_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:layout_toEndOf="@id/img_item_review"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_item_review_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:layout_toEndOf="@id/img_item_review"
        android:layout_below="@id/tv_item_review_title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_item_review_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:layout_toEndOf="@id/tv_item_review_quantity"
        android:layout_below="@id/tv_item_review_title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="@color/red"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_review_price"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <RatingBar
            android:id="@+id/rb_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:stepSize="1"
            android:progressTint="#FFEB3B" />

        <EditText
            android:id="@+id/edt_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:background="@drawable/bg_reg_3"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:hint="Write your experiences"
            android:gravity="top"/>
    </LinearLayout>
</RelativeLayout>